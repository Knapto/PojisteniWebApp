@model IEnumerable<PojisteniWebApp.Models.Pojistka>

@{
    ViewBag.Title = "Pojistky";
}

<h2>Pojistky</h2>

<p>
    @Html.ActionLink("Vytvořit pojistku", "Create", null, new { @class = "myButtonBlue" })
</p>
@using (Html.BeginForm())
{
    <p>
        Vyhledat: @Html.TextBox("SearchString")
        <input type="submit" value="Hledat" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Pojistenec.Jmeno)
        </th>
        <th>
            @Html.ActionLink("Příjmení", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PredmetPojisteni)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypPojisteni)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Castka)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlatnostOd)
        </th>
        <th>
            @Html.ActionLink("Platnost Do", "Index", new { sortOrder = ViewBag.DateSortParm })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pojistenec.Jmeno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pojistenec.Prijmeni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PredmetPojisteni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypPojisteni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Castka)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlatnostOd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlatnostDo)
            </td>
            <td>
                @Html.ActionLink("Upravit", "Edit", new { id = item.Id }, new { @class = "myButtonGreen" }) |
                @Html.ActionLink("Detail", "Details", new { id = item.Id }, new { @class = "myButtonYellow" }) |
                @Html.ActionLink("Odstranit", "Delete", new { id = item.Id }, new { @class = "myButtonRed" })
            </td>
        </tr>
    }

</table>
